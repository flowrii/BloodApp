@model BloodAppTry.Models.DonationCenter

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DonationCenter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OpensAt" class="control-label"></label>
                <input asp-for="OpensAt" class="form-control" />
                <span asp-validation-for="OpensAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosesAt" class="control-label"></label>
                <input asp-for="ClosesAt" class="form-control" />
                <span asp-validation-for="ClosesAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodBankID" class="control-label"></label>
                <select asp-for="BloodBankID" class ="form-control" asp-items="ViewBag.BloodBankID"></select>
            </div>
            <div class="form-group">
                <label asp-for="maxDayAppointments" class="control-label"></label>
                <input asp-for="maxDayAppointments" class="form-control" />
                <span asp-validation-for="maxDayAppointments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
